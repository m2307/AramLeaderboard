@model List<AramLeaderboardProject.Models.LeaderboardPlayerModel>

@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-12">
        <div class="alert-info" style="padding: 5px; margin: 5px 0px">
            <h1 style="text-align:center;">Only EUW!</h1>
        </div>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
            <h2>Ranking</h2>
        </div>
        <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
            <h2>Player</h2>
        </div>
        <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
            <h2>MMR</h2>
        </div>
    </div>
    @for (int i = 01; i < Model.Count() + 1; i++)
            {
        <div class="row">
            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
                <p>@i </p>
            </div>
            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
                <p>@Model[i - 1].Name</p>
            </div>
            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
                <p>@Model[i - 1].MMR</p>
            </div>
        </div>
    }
</div>
